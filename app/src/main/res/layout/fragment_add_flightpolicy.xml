<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/toolbar_title"/>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            android:id="@+id/policyname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">

                <ImageView
                    android:id="@+id/policyimg"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/camera"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/policyimg"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginBottom="10dp"
                        android:gravity="center_vertical"
                        android:text="航班延误险"
                        android:textSize="20dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical"
                        android:text="航班延误·高额赔付"
                        android:textSize="16dp"/>
                </LinearLayout>

            </RelativeLayout>

            <LinearLayout style="@style/common_horizontal_division_line_style"/>

            <LinearLayout style="@style/common_horizontal_division_line_style"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp">

                <LinearLayout style="@style/common_horizontal_division_line_style"/>

                <ImageView
                    android:id="@+id/policyfeeimg"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/policyfee"/>

                <TextView
                    android:id="@+id/policyfeetext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_toRightOf="@id/policyfeeimg"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="保费"/>

                <TextView
                    android:id="@+id/policyfee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_toRightOf="@id/policyfeetext"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="$1.3"/>

                <ImageView
                    android:id="@+id/policy_coverage_img"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/policyfee"
                    android:src="@drawable/policyfee"/>

                <TextView
                    android:id="@+id/policy_coverage_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_toRightOf="@id/policy_coverage_img"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="保额"/>

                <TextView
                    android:id="@+id/policy_coverage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_toRightOf="@id/policy_coverage_text"
                    android:background="@null"
                    android:gravity="center"
                    android:padding="16dp"/>
            </RelativeLayout>

            <LinearLayout
                style="@style/common_horizontal_division_line_style"
                android:orientation="vertical"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:paddingLeft="26dp"
                android:paddingRight="26dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/flight_date_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="4"
                        android:text="保障日期"/>

                    <EditText
                        android:id="@+id/flight_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:digits="0123456789-"
                        android:ems="10"
                        android:focusable="false"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/flight_id_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="4"
                        android:text="航班号"/>

                    <EditText
                        android:id="@+id/flight_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:ems="10"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/flight_route_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="4"
                        android:text="航班航线"/>

                    <EditText
                        android:id="@+id/flight_route"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:ems="10"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/flight_time_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="4"
                        android:text="航行时间"/>

                    <EditText
                        android:id="@+id/flight_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:ems="10"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/flight_weather_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="4"
                        android:text="天气状况"/>

                    <EditText
                        android:id="@+id/flight_weather"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/flight_weather_tv"
                        android:width="150dp"
                        android:focusable="false"/>


                    <Button
                        android:id="@+id/get_flight_weather"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="获取天气"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/accidentText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:ems="4"
                        android:text="保障责任"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/accidentText"
                        android:orientation="vertical">

                        <CheckBox
                            android:id="@+id/one_hour_checked"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="延误一小时以上"/>

                        <CheckBox
                            android:id="@+id/four_hour_checked"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="延误四小时以上"/>

                        <CheckBox
                            android:id="@+id/flight_cancel_checked"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:text="航班取消"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout style="@style/common_horizontal_division_line_style"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp">

                <LinearLayout style="@style/common_horizontal_division_line_style"/>

                <ImageView
                    android:id="@+id/scenicInsuredManImg"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:src="@drawable/policyman"/>

                <TextView
                    android:id="@+id/scenicInsuredManText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_toRightOf="@id/scenicInsuredManImg"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="被保人"/>

                <ImageView
                    android:id="@+id/addScenicPolicyMan"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/ic_action_add"/>

            </RelativeLayout>

            <LinearLayout style="@style/common_horizontal_division_line_style"/>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginBottom="10dp"
                          android:layout_marginTop="10dp"
                          android:orientation="vertical"

                          android:paddingLeft="16dp"
                          android:paddingRight="16dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/deleteInsuredMan"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/ico_action_delete"/>


                    <TextView
                        android:id="@+id/insuredMan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:text="小明"/>

                    <TextView
                        android:id="@+id/insuredManIDCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="612731199311140035"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/deleteInsuredMan2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/ico_action_delete"/>


                    <TextView
                        android:id="@+id/insuredMan2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:text="小红"/>

                    <TextView
                        android:id="@+id/insuredManIDCard2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="612731199311140039"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout style="@style/common_horizontal_division_line_style"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp">

                <LinearLayout style="@style/common_horizontal_division_line_style"/>

                <ImageView
                    android:id="@+id/linkmanimg"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:src="@drawable/policyman"/>

                <TextView
                    android:id="@+id/linkmantext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_toRightOf="@id/linkmanimg"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="联系人"/>

                <ImageView
                    android:id="@+id/addlinkman"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/ic_action_add"/>

            </RelativeLayout>

            <LinearLayout style="@style/common_horizontal_division_line_style"/>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginBottom="10dp"
                          android:layout_marginTop="10dp"
                          android:orientation="vertical"

                          android:paddingLeft="16dp"
                          android:paddingRight="16dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/deletelinkman"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/ico_action_delete"/>


                    <TextView
                        android:id="@+id/linkman"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:text="小明"/>

                    <TextView
                        android:id="@+id/linkmannumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="13891232808"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/deletelinkman2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/ico_action_delete"/>


                    <TextView
                        android:id="@+id/linkman2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:text="小红"/>

                    <TextView
                        android:id="@+id/linkmannumber2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="612731199311140039"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout style="@style/common_horizontal_division_line_style"/>


        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">


            <TextView
                android:id="@+id/fight_Fee"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_weight="1"
                android:gravity="center"
                android:text="￥1.3"
                android:textSize="20dp"
                android:textColor="@color/blue_ico"/>

            <LinearLayout style="@style/common_vertical_division_line_style"/>

            <TextView
                android:id="@+id/add_fightPolicy_OK"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_weight="1"
                android:background="@color/blue_ico"
                android:gravity="center"
                android:text="提交保单"
                android:textColor="@color/white"
                android:textSize="20dp"
                />

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>