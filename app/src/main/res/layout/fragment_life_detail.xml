<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingStart="10dp"
              android:paddingEnd="10dp"
              android:weightSum="1">

    <ImageView
        android:layout_width="164dp"
        android:layout_height="120dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="20dp"
        android:gravity="center_vertical"
        android:src="@drawable/my"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout style="@style/common_horizontal_division_line_style" />
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@color/gray">
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textSize="20sp"
        android:text="西安双飞七日游"
        android:padding="8dp"
        />
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="双飞+四星住宿，免预约"
        android:padding="2dp"/>
    </LinearLayout>


    <LinearLayout style="@style/common_horizontal_division_line_style" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                   >
        <TextView
            android:id="@+id/life_price_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:textSize="20sp"
            android:text="1200元"
            android:padding="4dp"/>
        <TextView
            android:id="@+id/life_xxx_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/life_price_text_view"
            android:layout_marginStart="8dp"
            android:textSize="12sp"
            android:text="随时退"
            />
        <TextView
            android:id="@+id/life_count_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="已售8402"
            android:layout_alignBottom="@id/life_xxx_text_view"
            android:layout_toEndOf="@id/life_price_text_view"/>
        <Button
            android:id="@+id/life_buy_button"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textSize="20sp"
            android:textColor="#808080"
            android:background="@drawable/button"
            style="?android:attr/borderlessButtonStyle"
            android:text="立即抢购"
            android:layout_margin="4dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"/>
        <Button
            android:id="@+id/life_policy_button"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textSize="20sp"
            android:textColor="#808080"
            android:background="@drawable/button"
            style="?android:attr/borderlessButtonStyle"
            android:text="购买保险"
            android:layout_margin="4dp"
            android:layout_below="@id/life_buy_button"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <LinearLayout style="@style/common_horizontal_division_line_style" />
    <LinearLayout style="@style/common_horizontal_division_line_style"
                  android:layout_marginTop="16dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">
        <TextView
            android:id="@+id/life_score_text_view"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableStart="@drawable/star3"
            android:drawablePadding="10dp"

            android:text="3.0分" />
        <TextView
            android:id="@+id/life_comment_num_text_view"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/right"
            android:layout_weight="1"
            android:paddingStart="90dp"
            android:paddingEnd="10dp"
            android:drawablePadding="1dp"
            android:text="690人评价" />
    </LinearLayout>

    <LinearLayout style="@style/common_horizontal_division_line_style" />
    <LinearLayout style="@style/common_horizontal_division_line_style"
                  android:layout_marginTop="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="商家信息"/>
        <LinearLayout style="@style/common_horizontal_division_line_style" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/life_shop_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XXX旅行社"/>
                <TextView
                    android:id="@+id/life_shop_address_text_view"
                    android:layout_width="149dp"
                    android:layout_height="wrap_content"
                    android:text="陕西省西安市碑林区咸宁西路"/>
                <TextView
                    android:id="@+id/life_distance_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
            <LinearLayout style="@style/common_vertical_division_line_style"  />
            <ImageButton
                android:id="@+id/life_contact_shop_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/contact_by_messege"
                android:layout_weight="0"/>
        </LinearLayout>

        <LinearLayout style="@style/common_horizontal_division_line_style" />
        <TextView
            android:id="@+id/life_other_stores_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="查看全部2家分店"/>
    </LinearLayout>

</LinearLayout>